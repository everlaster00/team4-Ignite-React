generator NC_client {
  provider = "prisma-client-js"
  output = "../src/generated/prisma-client/nc"
}

datasource NC_db {
  provider  = "postgresql"
  url       = env("NC_DATABASE_URL")
  directUrl = env("NC_DIRECT_URL")
}

