generator PJH_client {
  provider = "prisma-client-js"
  output = "../src/generated/prisma-client/pjh"
}

datasource PJH_db {
  provider  = "postgresql"
  url       = env("PJH_DATABASE_URL")
  directUrl = env("PJH_DIRECT_URL")
}

