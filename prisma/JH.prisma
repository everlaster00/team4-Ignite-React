generator JH_client {
  provider = "prisma-client-js"
  output = "../src/generated/prisma-client/jh"
}

datasource JH_db {
  provider  = "postgresql"
  url       = env("JH_DATABASE_URL")
  directUrl = env("JH_DIRECT_URL")
}

