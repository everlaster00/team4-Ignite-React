//# 마지막 마이그레이션 되돌리기. 롤백용 (개발 환경) (경고: 모든 데이터 손실))
// npx prisma migrate reset --스키마 경로


model JH_Post {
  id        String   @id @default(cuid())
  title     String
}

model Contact{
  id          Int      @id @default(autoincrement())
  name        String
  email       String
  title       String
  message     String
  createdAt   DateTime @default(now())
  status      String   @default("pending") // pending | replied | closed
}

